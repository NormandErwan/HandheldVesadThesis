@inproceedings{jankowski_survey_2013,
  title = {A Survey of Interaction Techniques for Interactive {{3D}} Environments},
  timestamp = {2017-10-31T21:15:09Z},
  booktitle = {Eurographics 2013-{{STAR}}},
  author = {Jankowski, Jacek and Hachet, Martin},
  year = {2013},
  annote = {[Probl{\`e}me de recherche] Chacun d'entre nous {\'e}volue dans un monde r{\'e}el en 3D, donc nous d{\'e}veloppons des capacit{\'e}s {\`a} naviguer dans un environnement 3D, {\`a} manipuler des objets 3D ou {\`a} interpr{\'e}ter des relations 3D spatiales Cependant, les utilisateurs de syst{\`e}mes 3D vont souvent trouver difficile d'interagir avec ces syst{\`e}mes, souvent car par une mauvaise conception de l'interface utilisateur ou des techniques d'interactions propos{\'e}es. [Solution] Proposer et r{\'e}aliser un {\'e}tat de l'art des interactions bas{\'e}es sur la souris ou le 'touch' utilis{\'e}es dans environnements 3D. Cela permettra aux chercheurs et d{\'e}veloppeurs d'avoir un bon recul du sujet. [M{\'e}thodologie] Peu d{\'e}taill{\'e}... L'{\'e}tat de l'art se r{\'e}alise sur 16 ans (de 1997 {\`a} 2013, prenant la suite du dernier {\'e}tat de l'art du domaine). Les techniques sont classifi{\'e}es en trois cat{\'e}gories : (1) techniques de Navigation, permettant de d{\'e}placer le point de vue de l'utilisateur, (2) techniques de S{\'e}lection et de Manipulation, permetant de choisir un objet et de sp{\'e}cifier sa position, son orientation et ses dimensions, (3) techniques de Contr{\^o}le du Syst{\`e}me, c'est-{\`a}-dire tout communication entre l'utilisateur et le syst{\`e}me ne faisant partis de l'envionnement 3D. Une section est consacr{\'e}e {\`a} l'{\'e}valuation de ces techniques. [R{\'e}sultats] [Limites] [Concepts-cl{\'e}s] [Futurs travaux] [R{\'e}f{\'e}rences centrales] [Notes] Diff{\'e}rence not{\'e}e par les auteurs entre environnements 3D (plus g{\'e}n{\'e}raux, repr{\'e}sentation d'un espace r{\'e}el ou imaginaire dans lequel l'utilisateur peut naviguer et peut interagir en temps r{\'e}el avec des objets), et environnements immersifs (envrionnements 3D immersifs apportant aux utilisateurs un sentiment de pr{\'e}sence dans l'espace repr{\'e}sent{\'e}).}
}

@inproceedings{jansen_evaluating_2013,
  title = {Evaluating the Efficiency of Physical Visualizations},
  timestamp = {2017-10-31T21:15:09Z},
  booktitle = {Proceedings of the {{SIGCHI Conference}} on {{Human Factors}} in {{Computing Systems}}},
  publisher = {{ACM}},
  author = {Jansen, Yvonne and Dragicevic, Pierre and Fekete, Jean-Daniel},
  year = {2013},
  pages = {2593--2602},
  annote = {[Probl{\`e}me de recherche] Une visualisation consiste {\`a} traduire un ensemble de donn{\'e}es selon certaines variables ("visual mapping" : couleur, taille, posisiton, ...) pour l'afficher. Cet affichage se r{\'e}alise selon une modalit{\'e} ("modality"), c-{\`a}-d. selon un support : par exemple, traduit en un objet physique ("physical-modality"), ou affich{\'e} sur un {\'e}cran ("on-screen modality"). Chaque modalit{\'e} a ses caract{\'e}ristiques, et un affichage en 3D est plus probl{\'e}matique sur un {\'e}cran que une traduction en un objet physique (probl{\`e}mes de distorsion, d'occlusion, et de navigation). Une modalit{\'e} peut-{\^e}tre hybride : par exemple en utilisant des contr{\^o}leurs physiques pour interragir avec une visualisation sur un {\'e}cran. Or les modalit{\'e}s physiques et d'{\'e}cran n'ont jamais {\'e}t{\'e} formellement compar{\'e}es pour des visualisations 3D. [Solution] R{\'e}aliser une exp{\'e}rience contr{\^o}l{\'e}e pour comparer des visualisations 3D identiques entre une modalit{\'e} physique et une modalit{\'e} sur {\'e}cran. [M{\'e}thodologie] 1 m{\^e}me lot de donn{\'e}es sur des donn{\'e}es de 10 pays sur 10 ans sur 16 indicateurs, traduit en 3D bar-chart. 3 t{\^a}ches : (i) t{\^a}che de plage : indiquer la plage de valeur pour un pays et un indicateur, (ii) t{\^a}che d'ordre : ranger par ordre d{\'e}croissant les valeurs pour un pays et un indicateur, (iii) tache de comparaison : parmi trois paires pays/ann{\'e}es pour un indicateur, d{\'e}terminer la paire avec la valeur la plus basse. 3 techniques : (i) condition de contr{\^o}le affichage en 2D sur l'{\'e}cran, (ii) bar-chart 3D sur {\'e}cran, (iii) bar-chart 3D physique, (iv) bar-chart 3D sur {\'e}cran avec st{\'e}r{\'e}oscopie. Les (ii) et (iii) sont identiques. 2 mesures : temps d'ex{\'e}cution de la t{\^a}che, et taux d'erreur. [R{\'e}sultats] Exp{\'e}rience 1. Pas de diff{\'e}rences entre sur le taux d'erreur entre les techniques. Pas de preuves que la st{\'e}ro permet d'{\^e}tre plus rapide qu'avec la mono. (iii) physique plus rapide que (ii) {\'e}cran-3D, mais {\'e}cran-2D le plus significativement rapide. Utilisateurs ont aussi pr{\'e}f{\'e}r{\'e}. Exp{\'e}rience 2 : c'est le pouvoir toucher (pas retour tactile, action de poser ses doigts sur la forme et 'marquer' des donn{\'e}es), et non la rotation directe, qui permet de meilleures performances avec le physique par rapport {\`a} l'{\'e}cran. [Limites] Exp{\'e}rience 1 : la modalit{\'e} {\`a} l'{\'e}cran demande des entr{\'e}es indirectes avec l'usage de souris, alors que la modalit{\'e} physique est une entr{\'e}e directe. [Concepts-cl{\'e}s] Physical visualization; evaluation; 3D visualization. [Futurs travaux] Tester sur d'autres visualisation que les bar-charts. {\'E}tudier d'autres modalit{\'e}s. {\'E}tudier avec d'autres t{\^a}ches, un peu plus haut-niveau. Comment designer la traduction des donn{\'e}es en modalit{\'e} physique ?, explorer les crit{\`e}res. [R{\'e}f{\'e}rences centrales]}
}

@inproceedings{jones_illumiroom:_2013,
  title = {{{IllumiRoom}}: Peripheral Projected Illusions for Interactive Experiences},
  timestamp = {2017-10-31T21:15:09Z},
  booktitle = {Proceedings of the {{SIGCHI Conference}} on {{Human Factors}} in {{Computing Systems}}},
  publisher = {{ACM}},
  author = {Jones, Brett R and Benko, Hrvoje and Ofek, Eyal and Wilson, Andrew D},
  year = {2013},
  keywords = {rank4,relevant},
  pages = {869--878},
  annote = {[Probl{\`e}me de recherche] La qualit{\'e} audio et video de la TV a augment{\'e} au fil des ann{\'e}es, mais l'exp{\'e}rience reste limit{\'e} au monde virtuel contenu dans l'{\'e}cran : l'environnement de l'utilisateur n'est pas utilis{\'e}. [Solution] Investiguer via un prototype, IllumiRoom, comment augmenter l'exp{\'e}rience visuelle de la TV, en utilisant un projecteur qui change l'apparence de la p{\'e}riph{\'e}rie autour de la TV (Focus+context appliqu{\'e} {\`a} la TV) : le contenu affich{\'e} est de plus basse r{\'e}solution car il est vu par la vision p{\'e}riph{\'e}rique de l'utilisateur. La g{\'e}om{\'e}trie de la pi{\`e}ce est captur{\'e}e pour r{\'e}aliser de meilleurs visuels. Ces visualisations sont appell{\'e}es \guillemotleft{} peripheral projected illusions \guillemotright. [M{\'e}thodologie] Le syst{\`e}me est r{\'e}alis{\'e}, comme preuve du concept. 11 visualisations sont impl{\'e}ment{\'e}es sur le syst{\`e}me pour explorer les dimension de conception de l'espace p{\'e}riph{\'e}rique visuel de la TV. Ces dimensions sont ensuite analys{\'e}es. Puis des tests informels de retours des visualisations sont fait aupr{\`e}s de joueurs (10 personnes, {\'e}valution des forces et faiblesses et de leur confort avec chaque visualisation + classement selon les dimensions trouv{\'e}es) et de game designers (5 personnes x 3 {\'e}quipes). [R{\'e}sultats] 11 illusions ont {\'e}t{\'e} cr{\'e}{\'e}es : - 4 variantes de Focus+Context : F+C Full (le contexte s'affiche tout autour de la TV), F+C Edges (le contexte est tr{\`e}s contrast{\'e} et n'affiche que les bords du contenu), F+C Segmented (le contenu n'est affich{\'e} que sur les murs et pas les objets autour de la TV), F+C Selective (seul certains {\'e}l{\'e}ments du contenu sont affich{\'e}s). - 2 variantes \guillemotleft{} peripherical flow \guillemotright{} : Grid (une grille tout autour de la TV retranscrit les mouvements du joueur), Starfield (des {\'e}toiles tout autour de la TV qui retranscrivent les mouvements du joueur). - 2 apparences : augmentation de couleurs (ex : look cartoon, look noir et blanc) et modification de la lumi{\`e}re (assombrir ou {\'e}claircir des zones, ex : pour adapter au th{\`e}me ou {\`a} l'ambiance du contenu). - 2 Interactions physiques : Bounce (un objet quitte l'{\'e}cran pour rebondir dans la p{\'e}riph{\'e}rie sur les objets du salon), Snow (de la neige tombe de la p{\'e}riph{\'e}rie pour aller tapisser le sol de blanc). L'espace de conception pr{\'e}sente trois facteurs pour concevoir une illusion : - Le but de l'illusion : introduire du mouvement, donner des informations ou du contenu suppl{\'e}mentaire, cr{\'e}er une atmosph{\`e}re, autres m{\'e}chaniques r{\'e}el-virtuel. - La connection du virtuel avec le r{\'e}el : soit en annulant le r{\'e}el et ainsi immerger dans le virtuel (ex : F+C Full, F+C Edges, Grid, Starfield), soit en incluant le virtuel dans le r{\'e}el (ex : F+C Seg, F+C Sel, Bounce, Snow), soit en augmentant le r{\'e}el r{\'e}duisant la fronti{\`e}re entre r{\'e}el et virtuel (Appearance, Lighting, Radial Wobble). - Le niveau d'abstraction : ind{\'e}pendant du contenu, ou d{\'e}pendant. Une {\'e}valution a {\'e}t{\'e} faite : Le niveau de naus{\'e}e des visualisations semble normal. Les effects F+C ont {\'e}t{\'e} appr{\'e}ci{\'e}s et trouv{\'e}s utiles mais parfois trop envahisants (si trop d'{\'e}v{\'e}nements). F+C Selective et F+C Segmented sont plus {\'e}quilibr{\'e}s entre contenu et confort. Les \guillemotleft{} peripherical flow \guillemotright{} donnent mieux que les F+C l'effet de mouvement mais sont trop d{\'e}connect{\'e}s du contenu. Idem pour les apparences qui r{\'e}ussissent {\`a} donner de l'atmosph{\`e}re mais sont d{\'e}connect{\'e}es. Les designers ont trouv{\'e}s les F+C impressionants mais probablement de trop {\`a} utiliser dans la dur{\'e}e. Les effets les plus prometteurs sont ceux alt{\'e}rant l'atmosph{\`e}re ou l'humeur ou les effets selon un {\'e}v{\'e}nement (F+C Selective, F+C Segmented, Bounce0. Autre probl{\'e}matique des effets li{\'e}s au contenu, si un l{\'e}ger d{\'e}calage arrive, cela peut casser l'illusion. Donc les effets ind{\'e}pendants sont peut-{\^e}tre mieux {\`a} utiliser. En tout cas enthousiasme pour le concept. [Limites] Exploration du concept fait seulement pour des jeux-vid{\'e}os. Am{\'e}liorer les visualisation de modification de couleurs avec des textures plus complexes que de simples couleurs. Il faudrait explorer plus en d{\'e}tail le niveau de naus{\'e}e des visualisations et le comparer {\`a} un jeu normal en st{\'e}r{\'e}o ou {\`a} un simulateur. [Concepts-cl{\'e}s] Spatial augmented reality; projection mapping; gaming; immersion; apparent motion; augmented reality. [Futurs travaux] Il faudrait explorer le concept pour les films ou du contenu t{\'e}l{\'e}vis{\'e} : comment associer la nature fixe du cadre d'un film avec la variabilit{\'e} des environnements autour d'une TV ? Les effets pourraient {\^e}tre li{\'e}s pas forc{\'e}ment {\`a} du contenu visuel, par exemple du contenu audio : {\`a} explorer. Enfin, il faudrait comparer {\`a} la TV seule dans une exp{\'e}rience plus formelle. [R{\'e}f{\'e}rences centrales] [1] Aides, A., Avraham, T., and Schechner, Y.Y. Multiscale Ultrawide Foveated Video Extrapolation. IEEE ICCP, (2011). [8] Oliver Bimber , Ramesh Raskar, Spatial Augmented Reality: Merging Real and Virtual Worlds, A. K. Peters, Ltd., Natick, MA, 2005 [9] Andy Cockburn , Amy Karlson , Benjamin B. Bederson, A review of overview+detail, zooming, and focus+context interfaces, ACM Computing Surveys (CSUR), v.41 n.1, p.1-31, December 2008 [19] Novy, D. and Jr., V.M.B. Infinity-by-nine. http://obm.media.mit.edu/, (2012). [28] Desney S. Tan , Darren Gergle , Peter Scupelli , Randy Pausch, With similar visual angles, larger displays improve spatial performance, Proceedings of the SIGCHI Conference on Human Factors in Computing Systems, April 05-10, 2003, Ft. Lauderdale, Florida, USA}
